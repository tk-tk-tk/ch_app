%div{class: "container"}
  - @messages.each do |message|
    .col-md-4
      .message
        .message-title
          %h3= message.title
        %p= link_to "View Message", message_path(message), class: "btn-custom"


- if user_signed_in?
  %div{class: "btn btn-defaut"}
  = link_to "New Message", new_message_path
- else
  = flash[:success] = "Before using functionality, please log in."
