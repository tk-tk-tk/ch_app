!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ChApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

  %div{class: "collapse navbar-collapse"}
    %ul{class: "nav navbar-nav"}
      %li{class: "active"}= link_to "Message Board", root_path

      %li{class: "active"}= link_to "Sign Up", new_user_registration_path

      - if user_signed_in?
        %li{class: "active"}= link_to "Sign Out", destroy_user_session_path, method: :Delete
      - else
        %li{class: "active"}= link_to "Log In", new_user_session_path

      /%li{class: "active"}= link_to "Mypage", user_path

      - if user_signed_in?
        %li{class: "active"}= link_to "New Message", new_message_path
        %li{class: "active"}= link_to "Withdraw Your Account", 'users/edit'


  = yield
